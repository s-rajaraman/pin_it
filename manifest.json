{
    "name": "Pin It",
    "description": "Pin pages down and revert back to it",
    "version": "1.0.0.0",
    "manifest_version": 2,
    "background": {
        "page": "background.html"
    },
    "icons": {
        "16": "logo16.png",
        "48": "logo48.png"
    },
    "commands": {
        "pin-page": {
            "suggested_key": {
                "default": "Ctrl+Shift+P"
            },
            "description": "Puts a pin on the page"
        },
        "unpin_page": {
            "suggested_key": {
                "default": "Ctrl+Shift+U"
            },
            "description": "Reverts to the last pinned page"
        }
    },
    "browser_action": {
        "default_icon": "pin-up.png",           // optional
        "default_title": "Pin It",      // optional; shown in tooltip
        "default_popup": "browserAction.html"
    },

    "permissions": [
        "tabs"
    ]
}